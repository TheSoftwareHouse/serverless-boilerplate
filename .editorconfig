# http://editorconfig.org/

# Top-most EditorConfig file ?
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Indentiation
[*.{css,scss,py}]
indent_style = space
indent_size = 4

[*.{js,ts,json}]
indent_style = space
indent_size = 2

[*.{html,yml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

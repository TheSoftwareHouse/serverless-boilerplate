{
  "name": "serverless-boilerplate",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "./node_modules/.bin/serverless offline -s dev --httpPort 1337",
    "tests": "./node_modules/.bin/mocha -r ts-node/register ./shared/**/*.spec.ts ./lambdas/**/*.spec.ts --exit",
    "format": "./node_modules/.bin/prettier --write ./shared/**/*.ts ./lambdas/**/*.ts",
    "lint": "./node_modules/.bin/eslint -c eslint.json --ext .ts ./lambdas/",
    "lint-fix": "./node_modules/.bin/eslint -c eslint.json --ext .ts --fix ./lambdas/",
    "generate-migration": "docker-compose up -d && ts-node ./node_modules/typeorm/cli.js migration:generate -f ./shared/config/db.config -n",
    "run-migrations": "docker-compose up -d && serverless invoke local --function migrations",
    "revert-migration": "docker-compose up -d && ts-node ./node_modules/typeorm/cli.js migration:revert -f ./shared/config/db.config",
    "create-migration": "docker-compose up -d && ts-node ./node_modules/typeorm/cli.js migration:create -f ./shared/config/db.config -n",
    "plop": "plop"
  },
  "author": "TSH",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "7.10.4",
    "@babel/plugin-proposal-class-properties": "7.10.4",
    "@babel/plugin-proposal-decorators": "7.10.4",
    "@babel/preset-typescript": "7.10.4",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/aws-lambda": "^8.10.57",
    "@types/dotenv": "^8.2.0",
    "@types/mocha": "7.0.2",
    "@types/node": "^12.12.47",
    "@types/supertest": "2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "3.5.0",
    "@typescript-eslint/parser": "3.5.0",
    "aws-lambda": "1.0.6",
    "babel-loader": "8.1.0",
    "copy-webpack-plugin": "^6.3.0",
    "eslint": "7.3.1",
    "eslint-config-airbnb": "18.2.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-config-airbnb-typescript": "8.0.2",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-chai-friendly": "0.6.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.3",
    "eslint-plugin-unicorn": "20.1.0",
    "husky": "^4.3.0",
    "mocha": "^8.2.1",
    "plop": "^2.7.3",
    "prettier": "2.0.5",
    "serverless": "^2.18.0",
    "serverless-offline": "6.4.0",
    "serverless-plugin-log-retention": "^2.0.0",
    "serverless-plugin-typescript": "1.1.9",
    "serverless-webpack": "5.3.2",
    "supertest": "6.0.1",
    "ts-loader": "7.0.5",
    "ts-node": "8.10.2",
    "tslint-eslint-rules": "5.4.0",
    "typescript": "3.9.6",
    "webpack": "4.43.0",
    "webpack-filter-warnings-plugin": "^1.2.1"
  },
  "dependencies": {
    "@middy/core": "^1.5.2",
    "aws-sdk": "2.691.0",
    "dotenv": "^8.2.0",
    "joi": "^17.3.0",
    "pg": "^8.5.0",
    "ts-pipe-compose": "^0.2.1",
    "typeorm": "^0.2.29",
    "uuid": "^3.3.2"
  }

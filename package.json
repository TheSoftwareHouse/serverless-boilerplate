{
  "name": "serverless-boilerplate",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "plop": "plop",
    "postinstall": "npm run install-all",
    "prepare": "husky install",
    "test-all": "concurrently npm:test-shared npm:test-api npm:test-backoffice --prefix 'command' --prefix-length 50 --prefix-colors 'bgBlue.bold,bgMagenta.bold,bgGreen.bold'",
    "format-all": "concurrently npm:format-shared npm:format-api npm:format-backoffice --prefix 'command' --prefix-length 50 --prefix-colors 'bgBlue.bold,bgMagenta.bold,bgGreen.bold'",
    "lint-all": "concurrently npm:lint-shared npm:lint-api npm:lint-backoffice --prefix 'command' --prefix-length 50 --prefix-colors 'bgBlue.bold,bgMagenta.bold,bgGreen.bold'",
    "lint-fix-all": "concurrently npm:lint-fix-shared npm:lint-fix-api npm:lint-fix-backoffice --prefix 'command' --prefix-length 50 --prefix-colors 'bgBlue.bold,bgMagenta.bold,bgGreen.bold'",
    "install-all": "concurrently npm:install-shared npm:install-api npm:install-backoffice --prefix 'command' --prefix-length 50 --prefix-colors 'bgBlue.bold,bgMagenta.bold,bgGreen.bold'",
    "install-shared": "(cd shared; npm i)",
    "format-shared": "(cd shared; npm run format)",
    "test-shared": "(cd shared; npm run test)",
    "lint-shared": "(cd shared; npm run lint)",
    "lint-fix-shared": "(cd shared; npm run lint-fix)",
    "install-api": "(cd services/api; npm i)",
    "format-api": "(cd services/api; npm run format)",
    "test-api": "(cd services/api; npm run test)",
    "lint-api": "(cd services/api; npm run lint)",
    "lint-fix-api": "(cd services/api; npm run lint-fix)",
    "install-backoffice": "(cd services/backoffice; npm i)",
    "format-backoffice": "(cd services/backoffice; npm run format)",
    "test-backoffice": "(cd services/backoffice; npm run test)",
    "lint-backoffice": "(cd services/backoffice; npm run lint)",
    "lint-fix-backoffice": "(cd services/backoffice; npm run lint-fix)"
  },
  "author": "TSH",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@serverless/compose": "^1.0.2",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "chai": "^4.2.0",
    "concurrently": "^7.1.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^41.0.0",
    "husky": "^7.0.4",
    "mocha": "^9.2.1",
    "prettier": "^2.5.1",
    "serverless": "^3.14.0",
    "sinon": "^13.0.2",
    "tslint-eslint-rules": "^5.4.0",
    "plop": "^3.0.5",
    "inquirer-directory": "^2.2.0"
  },
  "dependencies": {
    "ts-loader": "^9.2.6"
  }
}

{
  "name": "serverless-boilerplate",
  "version": "1.0.1",
  "description": "Serverless boilerplate",
  "homepage": "https://tsh.io",
  "author": "TSH",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheSoftwareHouse/serverless-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/TheSoftwareHouse/serverless-boilerplate/issues"
  },
  "scripts": {
    "dev": "./node_modules/.bin/serverless offline start -s dev --httpPort 1337 --lambdaPort 4000",
    "test": "./node_modules/.bin/mocha -r ts-node/register ./shared/**/*.spec.ts ./functions/**/*.spec.ts --exit",
    "format": "./node_modules/.bin/prettier --write .",
    "lint": "./node_modules/.bin/eslint -c eslint.json --ext .ts functions/ --ext .ts workflows/ --ext .ts shared/",
    "lint-fix": "./node_modules/.bin/eslint -c eslint.json --ext .ts --fix functions/ --ext .ts --fix workflows/ --ext .ts --fix shared/",
    "generate-migration": "docker-compose up -d && ts-node ./node_modules/typeorm/cli.js migration:generate -f ./shared/config/db -n",
    "run-migrations": "docker-compose up -d && serverless invoke local --function migrations",
    "revert-migration": "docker-compose up -d && ts-node ./node_modules/typeorm/cli.js migration:revert -f ./shared/config/db",
    "create-migration": "docker-compose up -d && ts-node ./node_modules/typeorm/cli.js migration:create -f ./shared/config/db -n",
    "start-workflow": "aws stepfunctions --endpoint http://localhost:8083 start-execution --state-machine-arn arn:aws:states:us-east-1:101010101010:stateMachine:$npm_config_workflow",
    "get-sf-logs": "docker-compose logs --follow sfLocal",
    "plop": "plop",
    "prepare": "husky install",
    "pre-command-run": "npm config set legacy-peer-deps=true"
  },
  "devDependencies": {
    "@babel/core": "7.19.6",
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@serverless/typescript": "^3.21.0",
    "@types/aws-lambda": "^8.10.108",
    "@types/dotenv": "^8.2.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.5",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "aws-lambda": "^1.0.7",
    "babel-loader": "^8.2.5",
    "copy-webpack-plugin": "^10.2.4",
    "eslint": "^8.26.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.2.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-unicorn": "^41.0.1",
    "husky": "^7.0.4",
    "inquirer-directory": "^2.2.0",
    "mocha": "^10.1.0",
    "plop": "^3.1.1",
    "prettier": "^2.7.1",
    "serverless": "^3.23.0",
    "serverless-offline": "^11.1.3",
    "serverless-plugin-log-retention": "^2.0.0",
    "serverless-plugin-typescript": "^2.1.4",
    "serverless-step-functions": "^3.10.0",
    "serverless-step-functions-local": "^0.4.0",
    "serverless-webpack": "^5.10.0",
    "supertest": "^6.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0"
  },
  "dependencies": {
    "@middy/core": "^3.6.2",
    "@middy/http-error-handler": "^3.6.2",
    "@middy/http-event-normalizer": "^3.6.2",
    "@middy/http-header-normalizer": "^3.6.2",
    "@middy/input-output-logger": "^3.6.2",
    "@middy/util": "^3.6.2",
    "aws-sdk": "^2.1240.0",
    "dotenv": "^16.0.3",
    "eslint-plugin-prettier": "^4.2.1",
    "http-status-codes": "^2.2.0",
    "joi": "^17.6.4",
    "pg": "^8.8.0",
    "ts-loader": "^9.4.1",
    "ts-pipe-compose": "^0.2.1",
    "typeorm": "^0.3.10",
    "uuid": "^9.0.0",
    "winston": "^3.8.2"
  }
}

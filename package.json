    "serverless-plugin-typescript": "^1.1.9",
    "serverless-step-functions": "^2.30.0",
    "serverless-webpack": "^5.5.0",
    "supertest": "^6.1.3",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.9.9",
    "webpack": "^4.46.0",
    "webpack-filter-warnings-plugin": "^1.2.1"
  },

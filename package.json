{
  "name": "serverless-boilerplate",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "./node_modules/.bin/serverless offline start -s dev --httpPort 1337 --lambdaPort 4000",
    "test": "./node_modules/.bin/mocha -r ts-node/register ./shared/**/*.spec.ts ./functions/**/*.spec.ts --exit",
    "format": "./node_modules/.bin/prettier --write ./shared/**/*.ts functions/**/*.ts",
    "lint": "./node_modules/.bin/eslint -c eslint.json --ext .ts functions/",
    "lint-fix": "./node_modules/.bin/eslint -c eslint.json --ext .ts --fix functions/",
    "generate-migration": "docker-compose up -d && ts-node ./node_modules/typeorm/cli.js migration:generate -f ./shared/config/db -n",
    "run-migrations": "docker-compose up -d && serverless invoke local --function migrations",
    "revert-migration": "docker-compose up -d && ts-node ./node_modules/typeorm/cli.js migration:revert -f ./shared/config/db",
    "create-migration": "docker-compose up -d && ts-node ./node_modules/typeorm/cli.js migration:create -f ./shared/config/db -n",
    "start-workflow": "aws stepfunctions --endpoint http://localhost:8083 start-execution --state-machine-arn arn:aws:states:us-east-1:101010101010:stateMachine:$npm_config_workflow",
    "plop": "plop",
    "prepare": "husky install"
  },
  "author": "TSH",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "7.16.12",
    "@babel/plugin-proposal-class-properties": "7.16.7",
    "@babel/plugin-proposal-decorators": "7.16.7",
    "@babel/preset-typescript": "7.16.7",
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@serverless/typescript": "^3.0.0",
    "@types/aws-lambda": "^8.10.92",
    "@types/dotenv": "^8.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.12",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "aws-lambda": "^1.0.7",
    "babel-loader": "^8.2.3",
    "copy-webpack-plugin": "^10.2.1",
    "eslint": "^8.7.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^40.1.0",
    "husky": "^7.0.4",
    "inquirer-directory": "^2.2.0",
    "mocha": "^9.2.0",
    "plop": "^3.0.5",
    "prettier": "^2.5.1",
    "serverless": "^3.0.0",
    "serverless-offline": "^8.3.1",
    "serverless-plugin-log-retention": "^2.0.0",
    "serverless-plugin-typescript": "^2.1.0",
    "serverless-step-functions": "^3.5.1",
    "serverless-step-functions-local": "^0.2.1",
    "serverless-webpack": "^5.6.1",
    "supertest": "^6.2.2",
    "ts-node": "^10.4.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^4.5.5",
    "webpack": "^5.67.0"
  },
  "dependencies": {
    "@middy/core": "^2.5.7",
    "@middy/http-error-handler": "^2.5.7",
    "@middy/http-event-normalizer": "^2.5.7",
    "@middy/http-header-normalizer": "^2.5.7",
    "@middy/input-output-logger": "^2.5.7",
    "@middy/util": "^2.5.7",
    "aws-sdk": "^2.1065.0",
    "dotenv": "^14.3.2",
    "http-status-codes": "^2.2.0",
    "joi": "^17.6.0",
    "pg": "^8.7.1",
    "ts-loader": "^9.2.6",
    "ts-pipe-compose": "^0.2.1",
    "typeorm": "^0.2.41",
    "uuid": "^8.3.2"
  }
}
